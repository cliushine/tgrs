{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "noEmit": true,
    "jsx": "react",
    "allowJs": true,
    // The following duplicate what's in the parent tsconfig.json file, but
    // Create React App forces them back in here if we try to remove them
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true
  }
}
